<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D6D6D6"
    tools:context="net.mobileassassin.mobileassassin.GameInfo">

    <TextView
        android:text="WELCOME TO THE ASSASSINATION CHAMBER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:id="@+id/game_info_title"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Game Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:id="@+id/gameName"
        android:gravity="center"
        android:layout_below="@+id/game_info_title"
        android:textColor="#B00C22"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Fuck Bitches Get Money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/gameName_ans"
        android:layout_below="@+id/gameName"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textColor="#B00C22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Player Count:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/playerCount"
        android:gravity="center"
        android:layout_below="@+id/gameName_ans"
        android:textColor="#B00C22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="11/19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/playerCount_ans"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:layout_below="@+id/playerCount"
        android:textColor="#B00C22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="MVP:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/mvp"
        android:gravity="center"
        android:layout_below="@+id/playerCount_ans"
        android:textColor="#B00C22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Quinn Verbeke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/mvp_ans"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:layout_below="@+id/mvp"
        android:textColor="#B00C22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="  View Players  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/view_players_button"
        android:layout_below="@+id/mvp_ans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="#6b6b6b"
        android:onClick="playersClick"/>

    <Button
        android:text="  View Map  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:id="@+id/view_map_button"
        android:layout_below="@+id/view_players_button"
        android:layout_centerHorizontal="true"
        android:background="#6b6b6b"
        android:onClick="mapClick"/>


</RelativeLayout>
